<pool type='{{ item.type }}'>
  <name>{{ item.name }}</name>
  {% if 'capacity' in item %}
  <capacity>{{ item.capacity }}</capacity>
  {% endif %}
  {% if item.type == 'lvm2' or item.type == 'zfs' %}
  <source>
    <name>{{ item.source }}</name>
    {% if item.type == 'lvm2' %}
    <format type='logical'/>
    {% endif %}
  </source>
  {% endif %}
  {% if item.type != 'zfs' %}
  <target>
    <path>{{ item.path | default('placeholder_value') }}</path>
  </target>
  {% endif %}
</pool>
